<div id="create-new-modal" class="modal-overlay fixed inset-0 z-50 hidden 
                                bg-black bg-opacity-70 flex justify-center items-center p-4">
    
    <section role="dialog" aria-labelledby="create-new-ticket-title" 
             class="bg-card-bg rounded-xl shadow-2xl w-full max-w-lg" 
             aria-modal="true">
        
        <header class="p-5 border-b border-[#334155] flex justify-between items-center">
            <h2 id="create-new-ticket-title" class="text-xl font-bold text-gray-100">Create New Ticket</h2>
            <button class="close-modal-btn text-gray-400 hover:text-white" aria-label="Close modal">
                &times;
            </button>
        </header>

        <form action="/tickets" method="POST" class="p-5 space-y-4">
            
            {# ðŸŽ¯ Title Field (Mandatory) #}
            <div class="space-y-1">
                <label for="create-title" class="block text-sm font-medium text-gray-300">Title <span class="text-red-500">*</span></label>
                <input type="text" id="create-title" name="title" required
                       placeholder="Enter ticket title (mandatory)"
                       class="w-full p-2.5 bg-[#0F172A] border border-[#334155] rounded-lg text-white">
                {# Placeholder for inline error: <p class="text-xs text-red-400 mt-1">Title is required.</p> #}
            </div>

            {# Description Field #}
            <div class="space-y-1">
                <label for="create-description" class="block text-sm font-medium text-gray-300">Description</label>
                <textarea id="create-description" name="description" maxlength="500" 
                          placeholder="Detailed description (max 500 chars)"
                          class="w-full p-2.5 bg-[#0F172A] border border-[#334155] rounded-lg text-white h-24"></textarea>
            </div>

            {# Status and Priority #}
            <div class="grid grid-cols-2 gap-4">
                <div class="space-y-1">
                    <label for="create-status" class="block text-sm font-medium text-gray-300">Status <span class="text-red-500">*</span></label>
                    <select id="create-status" name="status" required
                            class="w-full p-2.5 bg-[#0F172A] border border-[#334155] rounded-lg text-white">
                        {# ðŸŽ¯ Status Field Must Strictly Accept These Values #}
                        <option value="open" selected>Open</option>
                        <option value="in_progress">In Progress</option>
                        <option value="closed">Closed</option>
                    </select>
                </div>
                <div class="space-y-1">
                    <label for="create-priority" class="block text-sm font-medium text-gray-300">Priority</label>
                    <select id="create-priority" name="priority"
                            class="w-full p-2.5 bg-[#0F172A] border border-[#334155] rounded-lg text-white">
                        <option value="high">High</option>
                        <option value="medium" selected>Medium</option>
                        <option value="low">Low</option>
                    </select>
                </div>
            </div>

            {# Submit Button #}
            <div class="pt-2">
                <button type="submit" 
                        class="w-full bg-primary-blue hover:bg-blue-700 text-white font-medium py-2.5 rounded-lg transition-colors">
                    Create Ticket
                </button>
            </div>
        </form>
    </section>
</div>