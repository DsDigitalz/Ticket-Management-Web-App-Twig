<div id="delete-confirm-modal" class="modal-overlay fixed inset-0 z-50 hidden 
                                bg-black bg-opacity-70 flex justify-center items-center p-4">
    
    <section role="dialog" aria-labelledby="delete-confirm-title" 
             class="bg-card-bg rounded-xl shadow-2xl w-full max-w-sm p-6 text-center"
             aria-modal="true">
        
        <header class="mb-4">
            <h2 id="delete-confirm-title" class="text-2xl font-bold text-red-400">Confirm Deletion</h2>
        </header>

        <div class="space-y-4">
            <p class="text-gray-300">
                Are you sure you want to delete Ticket <strong id="delete-ticket-id">#1</strong>? This action cannot be undone.
            </p>
            
            <form action="/tickets/delete" method="POST" class="flex justify-center space-x-4 pt-2">
                <input type="hidden" name="id" id="delete-id-input" value="">
                
                {# Cancel Button #}
                <button type="button" class="cancel-modal-btn bg-gray-600 hover:bg-gray-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                    Cancel
                </button>

                {# Confirm Delete Button #}
                <button type="submit" 
                        class="bg-red-600 hover:bg-red-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
                    Delete Permanently
                </button>
            </form>
        </div>
    </section>
</div>