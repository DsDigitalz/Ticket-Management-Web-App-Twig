{% extends 'layouts/base.html.twig' %}

{# --- TWIG MACRO FOR DECORATIVE CIRCLES ---
   This replicates the JSX component logic for the circles.
#}
{% macro decorative_circle(size, top, left, right, bottom, color_class, opacity_class, zIndex) %}
    <div 
        class="absolute rounded-full filter blur-xl animate-pulse-slow pointer-events-none {{ opacity_class }} {{ color_class }}"
        style="
            width: {{ size }};
            height: {{ size }};
            top: {{ top }};
            left: {{ left }};
            right: {{ right }};
            bottom: {{ bottom }};
            z-index: {{ zIndex }};
        ">
    </div>
{% endmacro %}

{# Import the macro #}
{% import _self as macros %}

{% block content %}
    
    {# 1. Hero Section: <section> semantic tag - Matches the React component layout #}
    <section role="region" aria-label="Welcome and Call to Action"
             class="relative overflow-hidden my-auto pt-30 pb-20 lg:pb-30 text-center bg-[#0F172A] 
                    -mx-4 sm:-mx-8 rounded-b-[50px] md:rounded-b-[100px] shadow-xl shadow-black/40">
        
        {# Wavy Background SVG - Identical to React's SVG #}
        <svg
            class="absolute bottom-0 left-0 w-full text-[#1E293B] z-0"
            xmlns="http://www.w3.org/2000/svg"
            viewBox="0 0 1440 320"
        >
            <path
                fill="currentColor"
                fill-opacity="1"
                d="M0,192L60,197.3C120,203,240,213,360,224C480,235,600,245,720,229.3C840,213,960,171,1080,170.7C1200,171,1320,213,1380,234.7L1440,256L1440,320L1380,320C1320,320,1200,320,1080,320C960,320,840,320,720,320C600,320,480,320,360,320C240,320,120,320,60,320L0,320Z"
            ></path>
        </svg>

        {# Decorative Circles - Using Twig Macro for placement #}
        {{ macros.decorative_circle('200px', '10%', '5%', 'auto', 'auto', 'bg-[#3B82F6]', 'opacity-20', 1) }}
        {{ macros.decorative_circle('150px', 'auto', 'auto', '10%', '35%', 'bg-[#A855F7]', 'opacity-15', 1) }}

        {# <header> semantic tag for hero content - Replaces motion.header #}
        <header role="banner" class="mb-20 mt-40 flex px-4 flex-col justify-center items-center relative z-10">
            <h1 class="text-5xl md:text-7xl lg:text-8xl font-extrabold text-[#F8FAFC] mb-4 opacity-90">
                Ticketrax
            </h1>
            <p class="text-xl text-center text-[#94A3B8] mb-8">
                Your robust, multi-platform solution for simple and efficient ticket
                management.
            </p>

            {# <nav> semantic tag for the call-to-action buttons #}
            <nav role="navigation" aria-label="Main Call to Action" class="space-x-4">
                <a
                    href="/auth/login"
                    class="inline-block px-8 py-3 text-lg font-bold rounded-lg bg-[#3B82F6] hover:bg-[#2563EB] text-[#F8FAFC] transition duration-300 shadow-lg shadow-[#3B82F6]/50"
                    aria-label="Login to your account"
                >
                    Login
                </a>
                <a
                    href="/auth/register"
                    class="inline-block px-8 py-3 text-lg font-bold rounded-lg border-2 border-[#3B82F6] text-[#3B82F6] hover:bg-[#3B82F6]/10 transition duration-300"
                    aria-label="Create a new account"
                >
                    Get Started
                </a>
            </nav>
        </header>
    </section>

    {# 2. Features Section: <section> semantic tag - Replaces motion.section #}
    <section role="region" aria-label="Core Features" 
             class="relative grid md:grid-cols-3 gap-8 pt-20 pb-20 px-4">
        
        {# Decorative Circle 3 (Features) - Using Twig Macro #}
        {{ macros.decorative_circle('150px', '20%', 'auto', '45%', 'auto', 'bg-[#10B981]', 'opacity-10', 0) }}

      
        
    </section>
{% endblock %}