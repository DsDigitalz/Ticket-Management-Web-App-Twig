{% extends 'layouts/private_layout.html.twig' %}

{% block main_content %}
    <h1 class="text-3xl font-bold text-gray-100 mb-8">Dashboard Overview</h1>

    <section aria-label="Summary Statistics" class="grid grid-cols-1 md:grid-cols-3 gap-6 mb-10">
        
        {# Stat Card 1: Total Tickets #}
        <div class="bg-card-bg p-6 rounded-xl shadow-xl space-y-2">
            <h2 class="text-lg font-semibold text-gray-400">Total Tickets</h2>
            <p class="text-4xl font-bold text-white">{{ stats.total }}</p>
        </div>

        {# Stat Card 2: Open Tickets #}
        <div class="bg-card-bg p-6 rounded-xl shadow-xl space-y-2">
            <h2 class="text-lg font-semibold text-gray-400">Open Tickets</h2>
            <p class="text-4xl font-bold text-success-green">{{ stats.open }}</p>
        </div>

        {# Stat Card 3: Resolved Tickets #}
        <div class="bg-card-bg p-6 rounded-xl shadow-xl space-y-2">
            <h2 class="text-lg font-semibold text-gray-400">Resolved Tickets</h2>
            <p class="text-4xl font-bold text-closed-gray">{{ stats.closed }}</p>
        </div>
    </section>

    <div class="p-6 bg-card-bg rounded-xl shadow-xl">
        <h2 class="text-2xl font-semibold text-gray-100 mb-4">Quick Navigation</h2>
        <a href="/tickets" class="inline-block bg-primary-blue hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg transition-colors">
            Go to Ticket Management
        </a>
    </div>

{% endblock %}